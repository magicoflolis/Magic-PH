{
  "name": "magicph",
  "productName": "MagicPH",
  "description": "Enhances adult viewing experience. Clean, easy, simple, and quick.",
  "author": "Magic <magicoflolis@tuta.io>",
  "license": "GPL-3.0-only",
  "version": "2.0.14",
  "homepage": "https://github.com/magicoflolis/Magic-PH",
  "bugs": {
    "url": "https://github.com/magicoflolis/Magic-PH/issues"
  },
  "userJS": {
    "name": "MagicPH",
    "version": "2.0.0rc4",
    "bugs": "https://github.com/magicoflolis/Magic-PH/issues/new",
    "homepage": "https://github.com/magicoflolis/Magic-PH",
    "icon": "https://github.com/magicoflolis/Magic-PH/raw/master/assets/magicph_logo.png",
    "url": "https://github.com/magicoflolis/Magic-PH/releases/latest/download/magicph.user.js"
  },
  "scripts": {
    "Dev:FF": "concurrently \"sass -w --no-source-map ./src/sass/magicph.scss:./tests/firefox/css/magicph.css ./src/sass/downloader.scss:./tests/firefox/css/downloader.css ./src/sass/plyr/plyr.scss:./tests/firefox/css/plyr.css -s compressed\" \"pnpm run Dev:WebFF\"",
    "Dev:Cr": "concurrently \"sass -w --no-source-map ./src/sass/magicph.scss:./tests/chrome/css/magicph.css ./src/sass/downloader.scss:./tests/chrome/css/downloader.css ./src/sass/plyr/plyr.scss:./tests/chrome/css/plyr.css -s compressed\" \"pnpm run Dev:WebCr\"",
    "Dev:UserJS": "concurrently \"pnpm run build:UserJS\" \"pnpm run Dev:Server\" \"pnpm run Dev:Sass\"",
    "Dev:Sass": "sass -w ./src/sass/magicph.scss:./tests/compiled/magicph.css ./src/sass/downloader.scss:./tests/compiled/downloader.css ./src/sass/plyr/plyr.scss:./tests/compiled/plyr.css -s compressed",
    "Dev:Server": "http-server ./userscript/dist -s --no-dotfiles -c-1",
    "Dev:WebFF": "webpack --mode development --config=tools/webpack.config.js --env brws=firefox",
    "Dev:WebCr": "webpack --mode development --config=tools/webpack.config.js --env brws=chrome",
    "build:Browsers": "pnpm run build:Firefox && pnpm run build:Chrome && pnpm run build:Crx",
    "build:Chrome": "webpack --mode production --config=tools/webpack.config.js --env brws=chrome",
    "build:Crx": "node tools/crx.js",
    "build:Firefox": "webpack --mode production --config=tools/webpack.config.js --env brws=firefox",
    "build:UserJS": "node -r dotenv/config ./userscript/tools/userscript.mjs dotenv_config_path=./userscript/src/.env",
    "build:Sass": "sass --no-source-map ./src/sass/magicph.scss:./tests/compiled/magicph.css ./src/sass/downloader.scss:./tests/compiled/downloader.css ./src/sass/plyr/plyr.scss:./tests/compiled/plyr.css -s compressed",
    "Pub:UserJS": "node -r dotenv/config ./userscript/tools/userscript.mjs dotenv_config_path=./userscript/dist/.env",
    "web-run:firefox-android": "web-ext run --config=./tools/web-ext.js -t firefox-android --firefox-apk org.mozilla.firefox"
  },
  "devDependencies": {
    "@swc/cli": "^0.1.62",
    "@swc/core": "^1.3.56",
    "@types/chrome": "latest",
    "@types/firefox-webext-browser": "latest",
    "@types/greasemonkey": "latest",
    "@types/path-browserify": "^1.0.0",
    "autoprefixer": "^10.4.14",
    "browserslist": "^4.21.5",
    "concurrently": "^8.0.1",
    "copy-webpack-plugin": "^11.0.0",
    "crx3": "^1.1.3",
    "css-loader": "^6.7.3",
    "dotenv": "^16.0.3",
    "eslint": "^8.39.0",
    "eslint-config-prettier": "^8.8.0",
    "globby": "^13.1.4",
    "http-server": "^14.1.1",
    "mini-css-extract-plugin": "^2.7.5",
    "node-watch": "^0.7.3",
    "path-browserify": "^1.0.1",
    "postcss": "^8.4.31",
    "sass": "^1.62.0",
    "sass-loader": "^13.2.2",
    "swc-loader": "^0.2.3",
    "terser-webpack-plugin": "^5.3.7",
    "web-ext": "^7.6.2",
    "webpack": "^5.81.0",
    "webpack-cli": "^5.0.2",
    "webpack-extension-reloader": "^1.1.4",
    "webpack-merge": "^5.8.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/magicoflolis/Magic-PH.git"
  }
}
